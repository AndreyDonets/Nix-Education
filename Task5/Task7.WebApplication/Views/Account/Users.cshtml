@model IEnumerable<UserViewModel>

<h4>Users</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.UserName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Role
                </td>
                <td>
                    <a asp-controller="Account" asp-action="Edit" asp-route-userName="@item.UserName">Edit</a> |
                    <a asp-controller="Account" asp-action="Delete" asp-route-userName="@item.UserName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Account" asp-action="Create">Create new user</a>
</div>