@model decimal

    <div>
        <h4>Profit</h4>
        <p><output name="result">@Model</output></p>
    </div>
<div>
    <form asp-controller="Manage" asp-action="Profit" method="get">
        <div class="form-group">
            <label class="control-label">Start date</label>
            <input type="Date" value="@ViewBag.StartDate" name="startDate" />
        </div>
        <div class="form-group">
            <label class="control-label">End date</label>
            <input type="Date" value="@ViewBag.EndDate" name="endDate" />
        </div>
        <div class="form-group">
            <input type="submit" value="Calc" class="btn btn-primary" />
        </div>
    </form>
</div>

