        {
            <div class="nav-content container">
                <ul class="tabs tabs-transparent">
                    <li class="tab"><a asp-controller="Category" asp-action="GetAll">Category</a></li>
                    <li class="tab"><a asp-controller="RoomManage" asp-action="GetAll">Room</a></li>
                    <li class="tab"><a asp-controller="Manage" asp-action="Bookings">Manage</a></li>
                    <li class="tab"><a asp-controller="Manage" asp-action="Profit">Profit</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="tab"><a asp-controller="Account" asp-action="Users">User</a></li>
                    }
                </ul>
            </div>
        }
    </nav>
