<header>
    <nav class="nav-extended cyan">
        <div class="nav-wrapper container">
            <a class="brand-logo" asp-controller="Room" asp-action="Rooms">Youtel</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a asp-controller="Room" asp-action="GetAll">Rooms</a></li>
                <li><a asp-controller="Room" asp-action="GetAll" asp-route-date="@DateTime.Now.ToString("yyyy-MM-dd")">Search room</a></li>
                <li><a asp-controller="Room" asp-action="Book" asp-route-number="1">Book room</a></li>
            </ul>
        </div>
